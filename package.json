{
  "name": "code-quick-refer",
  "displayName": "code-quick-refer",
  "description": "copy a reference of code quickly.",
  "publisher": "wikichen",
  "version": "0.0.24",
  "repository": {
    "type": "git",
    "url": "https://github.com/dreamyyou/code-quick-refer.git"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "favoriteContainer0",
          "title": "收藏 1",
          "icon": "$(folder)"
        },
        {
          "id": "favoriteContainer1",
          "title": "收藏 2",
          "icon": "$(folder)"
        },
        {
          "id": "favoriteContainer2",
          "title": "收藏 3",
          "icon": "$(folder)"
        },
        {
          "id": "favoriteContainer3",
          "title": "收藏 4",
          "icon": "$(folder)"
        },
        {
          "id": "favoriteContainer4",
          "title": "收藏 5",
          "icon": "$(folder)"
        }
      ]
    },
    "views": {
      "favoriteContainer0": [
        {
          "id": "favoriteSlot0",
          "name": "收藏 1"
        }
      ],
      "favoriteContainer1": [
        {
          "id": "favoriteSlot1",
          "name": "收藏 2"
        }
      ],
      "favoriteContainer2": [
        {
          "id": "favoriteSlot2",
          "name": "收藏 3"
        }
      ],
      "favoriteContainer3": [
        {
          "id": "favoriteSlot3",
          "name": "收藏 4"
        }
      ],
      "favoriteContainer4": [
        {
          "id": "favoriteSlot4",
          "name": "收藏 5"
        }
      ]
    },
    "commands": [
      {
        "command": "code-quick-refer.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "code-quick-refer.generateReferences",
        "title": "复制对象引用"
      },
      {
        "command": "code-quick-refer.copyLineNumber",
        "title": "复制行号"
      },
      {
        "command": "code-quick-refer.formatHtml",
        "title": "HTML 格式化"
      },
      {
        "command": "code-quick-refer.openWithSystem",
        "title": "使用系统默认工具打开"
      },
      {
        "command": "code-quick-refer.addFavorite",
        "title": "收藏到侧边活动栏"
      },
      {
        "command": "code-quick-refer.removeFavorite",
        "title": "从收藏夹移除",
        "icon": "$(trash)"
      },
      {
        "command": "code-quick-refer.addStatusBarFavorite",
        "title": "收藏到底部状态栏"
      },
      {
        "command": "code-quick-refer.manageStatusBarFavorites",
        "title": "管理状态栏收藏"
      },
      {
        "command": "code-quick-refer.manageFavorites",
        "title": "管理活动栏收藏"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "code-quick-refer.generateReferences",
          "when": "editorTextFocus",
          "group": "navigation@10"
        },
        {
          "command": "code-quick-refer.copyLineNumber",
          "when": "editorTextFocus",
          "group": "navigation@11"
        },
        {
          "command": "code-quick-refer.formatHtml",
          "when": "editorTextFocus && editorLangId == html",
          "group": "navigation@12"
        }
      ],
      "explorer/context": [
        {
          "command": "code-quick-refer.openWithSystem",
          "when": "!explorerResourceIsFolder",
          "group": "navigation@99"
        },
        {
          "command": "code-quick-refer.addFavorite",
          "when": "explorerResourceIsFolder",
          "group": "navigation@50"
        },
        {
          "command": "code-quick-refer.addStatusBarFavorite",
          "when": "explorerResourceIsFolder",
          "group": "navigation@51"
        }
      ],
      "view/title": [
        {
          "command": "code-quick-refer.removeFavorite",
          "when": "view =~ /favoriteSlot/",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "code-quick-refer.generateReferences",
        "key": "alt+d",
        "mac": "alt+d",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "package:vsix": "pnpm dlx @vscode/vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
